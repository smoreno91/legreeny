<?xml version="1.0"?>
<config>
	<default>
		<EXAMPLE>
			<SAMPLE>
				<ENABLED>1</ENABLED>
			</SAMPLE>
		</EXAMPLE>
	</default>
    <modules>
        <EM_Ajaxcart>
            <version>0.1.0</version>
        </EM_Ajaxcart>
    </modules>
    <frontend>
        <routers>
            <ajaxcart>
                <use>standard</use>
                <args>
                    <module>EM_Ajaxcart</module>
                    <frontName>ajaxcart</frontName>
                </args>
            </ajaxcart>
        </routers>
        <layout>
            <updates>
                <ajaxcart>
                    <file>em_ajaxcart.xml</file>
                </ajaxcart>
            </updates>
        </layout>
		<!--<events>
            <review_controller_product_init_after>
                <observers>
                    <ajaxcart_review>
                        <class>ajaxcart/observer</class>
                        <method>addCartReview</method>
                    </ajaxcart_review>
                </observers>
            </review_controller_product_init_after>
        </events>-->
    </frontend>
    <admin>
		<routers>
            <adminhtml>
                <args>
                    <modules>
                        <auction before="Mage_Adminhtml">EM_Ajaxcart_Adminhtml</auction>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
			<emthemes translate="title">
				<title>EMThemes</title>
				<sort_order>72</sort_order>
				<children>
					<em_ajaxcart module="ajaxcart">
						<title>EM Ajaxcart Settings</title>
						<sort_order>125</sort_order>
                        <action>adminhtml/system_config/edit/section/em_ajaxcart/</action>
					</em_ajaxcart>
				</children>
			</emthemes>
        </menu>		
		<layout>
			<updates>
				<ajaxcart>
					<file>ajaxcart.xml</file>
				</ajaxcart>
			</updates>
		</layout>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<em_ajaxcart translate="title" module="ajaxcart">
											<title>EM Ajaxcart settings</title>
											<sort_order>150</sort_order>
										</em_ajaxcart>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>   
    <global>
        <models>
            <ajaxcart>
                <class>EM_Ajaxcart_Model</class>
                <resourceModel>ajaxcart_mysql4</resourceModel>
            </ajaxcart>
            <ajaxcart_mysql4>
                <class>EM_Ajaxcart_Model_Mysql4</class>
                <entities>
                    <ajaxcart>
                        <table>ajaxcart</table>
                    </ajaxcart>
                </entities>
            </ajaxcart_mysql4>
        </models>
        <resources>
            <ajaxcart_setup>
                <setup>
                    <module>EM_Ajaxcart</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ajaxcart_setup>
            <ajaxcart_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ajaxcart_write>
            <ajaxcart_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ajaxcart_read>
        </resources>
        <blocks>
            <ajaxcart>
                <class>EM_Ajaxcart_Block</class>
            </ajaxcart>
        </blocks>
        <helpers>
            <ajaxcart>
                <class>EM_Ajaxcart_Helper</class>
            </ajaxcart>
        </helpers>
    </global>
	<default>
		<em_ajaxcart>
			<general>
				<time_close>0</time_close>
				<crosssell>1</crosssell>
				<thumb_width>95</thumb_width>
				<thumb_height>95</thumb_height>
			</general>
		</em_ajaxcart>
	</default>
</config>