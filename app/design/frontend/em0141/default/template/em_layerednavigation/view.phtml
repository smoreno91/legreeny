        <?php if($this->canShowBlock()): ?>
        <div class="em-line-01 block block-layered-nav em-filter-content">
            <div class="em-filter-title-wrapper">
                <div class="em-block-title block-title">
                    <strong><span><?php echo $this->__('Shop By') ?></span></strong>
                </div>
                <?php if($this->canShowOptions()): ?>
                <ul class="em-filter-title">
                    <?php $_filtersTitle = $this->getFilters() ?>
