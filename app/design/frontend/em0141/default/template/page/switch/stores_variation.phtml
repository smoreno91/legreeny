/**
 * Store switcher template
 *
 * @see Mage_Core_Block_Store_Switcher
 */
?>
<?php if(count($this->getGroups())>1): ?>
<h1 class="title-custom text-center"><?php echo $this->__('%s DEMOS SCROLL DOWN TO VIEW ALL',count($this->getGroups())) ?></h1>
<div id="em-list-store" class="em-wrapper-variation-store">
	<?php foreach ($this->getGroups() as $_group): ?>
		<?php 
			$name	=	strtolower($this->escapeHtml($_group->getName()));
			$name	=	str_replace(" ","_",trim($name));
		?>
		<div class="em-store-item">
            <?php $_selected = ($_group->getId()==$this->getCurrentGroupId()) ? ' selected' : '' ?>       
			<a class="em-store-switch<?php echo $_selected ?>" href="<?php echo $_group->getHomeUrl() ?>" title="<?php echo $this->escapeHtml($_group->getName()) ?>">
                <img class="em-store-img img-responsive" src="<?php echo $this->getSkinUrl('images/storeview/'.$name.'.jpg'); ?>" alt="<?php echo $this->escapeHtml($_group->getName()) ?>" />																
                <span class="bkg-hover"><?php echo $this->escapeHtml($_group->getName()) ?></span>
			</a>
		</div>
	<?php endforeach; ?>
</div>
<?php endif; ?>