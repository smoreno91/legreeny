/* @var $this Mage_Reports_Block_Product_Viewed */
?>
<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
<div class="em-line-01 block block-list block-viewed">
    <div class="block-title">
        <strong><span><?php echo $this->__('Recently Viewed Products') ?></span></strong>
    </div>
    <div class="block-content">
        <ol id="recently-viewed-items">
        <?php foreach ($_products as $_item): ?>
            <li class="item">
                <a href="<?php echo $this->getProductUrl($_item) ?>" title="<?php echo $this->stripTags($_item->getName(), null, true) ?>" class="product-image">
                    <img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(Mage::helper('themeframework/settings')->getRecentlyViewed_Width(),Mage::helper('themeframework/settings')->getRecentlyViewed_Height()) ?>" width="<?php echo Mage::helper('themeframework/settings')->getRecentlyViewed_Width() ?>" height="<?php echo Mage::helper('themeframework/settings')->getRecentlyViewed_Height() ?>" alt="<?php echo $this->stripTags($_item->getName(), null, true) ?>" />                    
                </a>
                <div class="product-shop">
                    <div class="f-fix">
                        <h3 class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>"><?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?></a></h3>
                        <?php echo $this->getReviewsSummaryHtml($_item, 'short') ?>
                        <?php echo $this->getPriceHtml($_item, true, '-home-viewed') ?>
                    </div>
                </div>                
                
            </li>
        <?php endforeach; ?>
        </ol>
        <script type="text/javascript">decorateList('recently-viewed-items');</script>
    </div>
</div>
<?php endif; ?>
